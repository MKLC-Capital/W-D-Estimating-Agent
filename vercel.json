{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "app/__init__.py",
          "app/main.py",
          "app/models.py",
          "app/products.py",
          "app/estimator.py",
          "app/templates/**",
          "app/static/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.py" }
  ]
}
